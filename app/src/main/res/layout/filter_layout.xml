<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/filter_background">

    <TextView
        android:id="@+id/titleDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="title"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="10dp">
    </TextView>

    <EditText
        android:id="@+id/title"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:hint="title"
        android:inputType="text"
        android:layout_toRightOf="@id/titleDesc"
        android:layout_marginTop="20dp">
    </EditText>

    <TextView
        android:id="@+id/descriptionDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="description"
        android:layout_below="@id/title"
        android:layout_marginLeft="10dp">
    </TextView>

    <EditText
        android:id="@+id/description"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:hint="description"
        android:inputType="text"
        android:layout_toRightOf="@id/descriptionDesc"
        android:layout_below="@id/title">
    </EditText>

    <TextView
        android:id="@+id/usernameDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="username"
        android:layout_below="@id/description"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="10dp">
    </TextView>

    <EditText
        android:id="@+id/username"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:hint="username"
        android:inputType="text"
        android:layout_toRightOf="@id/usernameDesc"
        android:layout_marginTop="20dp"
        android:layout_below="@id/description">
    </EditText>

    <TextView
        android:id="@+id/dateDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="date and hour"
        android:layout_below="@id/username"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="10dp">
    </TextView>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/DateHourFromTil"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/username"
        android:hint="       From"
        app:boxCornerRadiusTopStart="8dp"
        app:boxCornerRadiusTopEnd="8dp"
        app:boxCornerRadiusBottomStart="8dp"
        app:boxCornerRadiusBottomEnd="8dp"
        android:layout_toRightOf="@id/dateDesc"
        app:startIconDrawable="@drawable/calendar_black">
    <EditText
        android:id="@+id/dateFrom"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:inputType="none"
        >
    </EditText>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/DateHourToTil"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/username"
        android:hint="       To"
        app:boxCornerRadiusTopStart="8dp"
        app:boxCornerRadiusTopEnd="8dp"
        app:boxCornerRadiusBottomStart="8dp"
        app:boxCornerRadiusBottomEnd="8dp"
        android:layout_toRightOf="@id/DateHourFromTil"
        app:startIconDrawable="@drawable/calendar_black">
        <EditText
            android:id="@+id/dateTo"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:inputType="none"
            >
        </EditText>
    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:id="@+id/CategoryDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Category"
        android:layout_below="@id/DateHourFromTil"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="10dp">
    </TextView>
    <CheckBox
        android:id="@+id/Cat1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/DateHourFromTil"
        android:layout_toRightOf="@id/CategoryDesc"
        android:text="Info"
        android:checked="false" />
    <CheckBox
        android:id="@+id/Cat2"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@id/Cat1"
        android:layout_below="@id/DateHourFromTil"
        android:layout_height="wrap_content"
        android:text="Warning"
        android:checked="false" />
    <CheckBox
        android:id="@+id/Cat3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/DateHourFromTil"
        android:layout_toRightOf="@id/Cat2"
        android:text="Emergency"
        android:checked="false" />
    <CheckBox
        android:id="@+id/Cat4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/DateHourFromTil"
        android:layout_toRightOf="@id/Cat3"
        android:text="Critical"
        android:checked="false" />

    <Button
        android:id="@+id/submitFilter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_below="@id/CategoryDesc">
    </Button>

    <Button
        android:id="@+id/Reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:layout_toRightOf="@id/submitFilter"
        android:layout_below="@id/CategoryDesc">
    </Button>


</RelativeLayout>